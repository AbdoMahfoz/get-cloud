<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.createAccount.CreateAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/ic_login_background"
        android:background="#2C4C51"
        android:padding="30dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="User Name"
            android:drawableRight="@drawable/ic_person"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="15dp"
            android:gravity="top"

            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email"
            android:drawableRight="@drawable/ic_mail"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_below="@+id/username"
            android:layout_marginTop="15dp"
            android:gravity="top"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Pasword"
            android:drawableRight="@drawable/ic_lock"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_below="@+id/email"
            android:layout_marginTop="15dp"
            android:gravity="top"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#fff"
            android:textSize="45dp"
            android:layout_below="@id/password"

            android:layout_marginTop="30dp"/>
        <android.widget.Button
            android:id="@+id/signup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_style"
            android:foreground="@drawable/ic_arrow"
            android:foregroundGravity="center"
            android:layout_alignBottom="@id/textView3"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            tools:targetApi="m" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_below="@id/textView3"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/existAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have Account?!"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@id/imageView3"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About?"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@id/existAccount"
            android:layout_marginTop="10dp"/>

        <ProgressBar
            android:id="@+id/progress_bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textView3"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

    </RelativeLayout>

</layout>